\def\topTag#1#2{\fill[toptag] \shapeStrip{#1};
\node at (\cardwidth-\stripwidth*0.5-\stripwidth*#1-\strippadding*#1-\strippadding,\cardheight-\stripwidth*0.5) {#2};
}
